# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - ImportStore
# ============================================
# Copiá este archivo a .env y completá con tus valores reales

# ============================================
# DJANGO SETTINGS
# ============================================
DJANGO_SECRET_KEY=tu-secret-key-super-segura-aqui-genera-una-nueva
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,api.tu-dominio.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# ============================================
# BASE DE DATOS (PostgreSQL)
# ============================================
DB_ENGINE=postgresql
DB_NAME=importstore
DB_USER=importstore_user
DB_PASSWORD=tu-password-super-segura-aqui
DB_HOST=db
DB_PORT=5432

# ============================================
# CORS (Frontend URLs)
# ============================================
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com

# ============================================
# FRONTEND (Next.js)
# ============================================
NEXT_PUBLIC_API_URL=https://api.tu-dominio.com
FRONTEND_PORT=3000

# ============================================
# BACKEND (Django)
# ============================================
BACKEND_PORT=8000

# ============================================
# NGINX
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# SERVICIOS EXTERNOS
# ============================================
GEMINI_API_KEY=tu-api-key-de-google-gemini

